section
  // title page header
  &#titlepage
    .subtitle
      margin: 0
    > header h1
      text-align: center

  &#copyright
    figure.image div.content
      text-align: left

figure.image img.titlepage-pubs-logo
  margin-top: 3em
  width: 100px

#titlepage-description
  text-align: center

.titlepage-publisher
  font-family: $header-font
  font-size: 12px
  text-align: center
  text-transform: uppercase
  letter-spacing: 1pt

.titlepage-publisher-website
  font-family: $header-font
  font-size: 12px
  text-align: center
  text-transform: lowercase
  letter-spacing: 1pt

p.subtitle
  font-style: italic
  font-size: 1.2em
  padding: 0 0 0.25em 1.5em
  margin-bottom: 40px

.titlepage-author
  text-align: center
  margin-top: 8em

// NOTE: line-height must be relative value. 0pt is an absolute value and triggers warnings from kindlegen:
// Absolute value specified for CSS property in content is not supported by Kindle readers. Please use % or refer Kindle Publishing Guidelines about usage of property: 'line-height'

// we want this to not take up any space, but "display: none" can disable the anchor linking behaviour
.top-anchor
  font-size: 0pt
  line-height: 0
  margin: 0pt
  padding: 0pt

nav#guide
  display: none

.example > .example-title
  color: #777777
  font-style: italic
  font-size: 0.9em
  padding-bottom: 0.6em

